<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <style>
        .post{
            background-color: rgb(64, 220, 255);
        }
    </style>
</head>
<body>
    <h1>Tech Posts</h1>

    <% for(let post of posts){ %>
        <div class="post">
            <h2>@<%= post.user %></h2>
            <h3 > Content: <%= post.content %></h3>
            <h5>Likes:<%= post.likes %></h5>
        </div>
    <% } %>
</body>
</html>
